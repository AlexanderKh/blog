<h2><%= @article.title %></h2>

<a href="<%= @article.picture.url %>">
  <%= image_tag @article.picture.url :medium %>
</a>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<h3>Comments</h3>

<%= form_for([@article, @comment]) do |f| %>
  <div class="field">
    <%= f.label :content, 'Comment' %><br>
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<hr>

<div>
  <% @article.comments.each do |comment| %>
    <div class="comment">
      <p>
        <%= comment.posted_at %>
        <b><%= comment.user.try :username or 'Anonymous' %></b>
      </p>
      <p class="rest-in-place"
         data-object="comment"
         data-url="<%= article_comment_path @article, comment %>"
         data-attribute="content">
        <%= comment.content %>
      </p>
    </div>
    <hr>
  <% end %>
</div>