<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<%= image_tag @article.picture.url :medium %><br>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<h3>Comments</h3>

<div>
  <% @article.comments.each do |comment| %>
    <div class="comment">
      <p><%= comment.user.username %></p>
      <p><%= comment.content %></p>
    </div>
  <% end %>
</div>